    $code_guess = gets.chomp
  end
end

class Computer
  include BreakingCode
  def initialize
    $code_arr = []
    
    i = 0
    @num_of_guesses = 0
    while i < 4
      $code_arr.push(rand(1..9)) 
      i += 1
    end
  end

  def comp_cont_break
      0.upto(3) do |num|
        if @sign_arr[num] == "o" 
          $code_arr[num] = rand(1..9)
        elsif @sign_arr[num] == "~"
        end
      end
      @num_of_guesses += 1
      puts $code_arr.join
  end
end

