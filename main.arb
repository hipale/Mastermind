module BreakingCode
  def code_break (code, guess)
    @sign_arr = []
    0.upto(3) do |num|
      if code[num].to_i == guess[num].to_i then @sign_arr.push("!")
      elsif code.none? {|try| try.to_i == guess[num].to_i } then @sign_arr.push("o")
      else @sign_arr.push("~") end
    end
    puts @sign_arr.join
  end
end

